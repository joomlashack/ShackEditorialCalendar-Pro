<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset
		addfieldpath="/administrator/components/com_pixpublish/models/fields"
	>
		<field
			name="title"
			type="text"
			id="title"
			description="JFIELD_TITLE_DESC"
			label="JGLOBAL_TITLE"
			size="30"
		/>
		<field
			name="start"
			type="time"
			id="start"
			label="PLG_PIXPUBLISH_CONTENT_START_LABEL"
		/>
		<field name="state" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
	</fieldset>
</form>
