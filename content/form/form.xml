<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset
		addfieldpath="/administrator/components/com_pixpublish/models/fields"
	>
		<field
			name="title"
			type="text"
			id="title"
			description="JFIELD_TITLE_DESC"
			label="JGLOBAL_TITLE"
			size="30"
		/>
		<field
			name="alias"
			type="text"
			id="alias"
			description="JFIELD_ALIAS_DESC"
			label="JFIELD_ALIAS_LABEL"
			size="30"
		/>
		<field
			name="start"
			type="time"
			id="start"
			label="PLG_PIXPUBLISH_CONTENT_START_LABEL"
		/>
		<field name="state" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="inputbox"
			filter="intval" default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		<field
			name="articletext"
			type="fixed"
			buttons="false"
			label="CONTENT_TEXT_LABEL"
			description="CONTENT_TEXT_DESC"
			class="inputbox"
			filter="JComponentHelper::filterText"
			asset_id="com_content"
			rows="5"
			groupclass="pp-ctrl-block"
			repeat="true"
			/>
	</fieldset>
</form>
